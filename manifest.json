{
  "manifest_version": 3,
  "name": "Motivational Dashboard",
  "version": "1.0.0",
  "description": "Transform your new tab into an inspiring motivational dashboard",
  "permissions": [
    "storage"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 